library("mnorm")
library("mnorm")
n <- 10000
# Симулируем выборку из многомерного нормального
# стандартизирвоав ковариационную матрицу
sigma <- matrix(c(1,    0.3,  -0.2,
0.3,  1,    0.25,
-0.2, 0.25, 1),
ncol = 3, byrow = TRUE)
u <- rmnorm(n, mean = c(0, 0, 0), sigma = sigma)
x <- pnorm(u)
# Задаем маржинальные распределения каждой компоненте
x[, 1] <- qexp(x[, 1])                                # экспоненциальное
x[, 2] <- qt(x[, 2], df = 5)                          # Стьюдент
x[, 3] <- qt(x[, 3], df = 5) * sqrt((5 - 2) / 5)      # стандартизированный Стьюдент
# Убеждаемся в верной форме маржинального распределения
# за счет графического анализа
plot(density(x[, 1]))
